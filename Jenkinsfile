pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    // Commands to build your application
                    sh 'echo "Building application..."'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    // Commands to test your application
                    sh 'echo "Testing application..."'
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Commands to deploy your application
                    sh 'echo "Deploying application..."'
                }
            }
        }
    }
}